---
export interface Props {
  image: string;
  title: string;
  description?: string;
}
const { image, title, description } = Astro.props;
---
<div class="relative bg-green-800 text-white py-24 sm:py-32">
  <div class="absolute inset-0 overflow-hidden">
    <img 
      src={image} 
      alt={title} 
      class="w-full h-full object-cover opacity-30" 
    />
  </div>
  <div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-center mb-6">
      {title}
    </h1>
    {description && (
      <p class="text-xl sm:text-2xl text-center max-w-3xl mx-auto">{description}</p>
    )}
  </div>
</div> 
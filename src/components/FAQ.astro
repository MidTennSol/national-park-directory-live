---
// FAQ Component for National Park Directory Blog
// Generates both visible FAQ content and matching JSON-LD structured data
// Ensures Google compliance with visible content matching structured data

interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQItem[];
  title?: string;
  showJsonLD?: boolean;
}

const { 
  faqs = [], 
  title = "Frequently Asked Questions",
  showJsonLD = true 
} = Astro.props;

// Generate JSON-LD structured data
const jsonLD = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

{faqs.length > 0 && (
  <section class="faq-section" id="faq">
    <h2 class="faq-title">{title}</h2>
    
    <div class="faq-container">
      {faqs.map((faq, index) => (
        <div class="faq-item">
          <h3 class="faq-question" id={`faq-${index}`}>
            <span class="faq-question-text">{faq.question}</span>
          </h3>
          <div class="faq-answer">
            <p set:html={faq.answer} />
          </div>
        </div>
      ))}
    </div>
    
    {showJsonLD && (
      <script type="application/ld+json" set:html={JSON.stringify(jsonLD)} />
    )}
  </section>
)}

<style>
  /* FAQ Section Styling - Matches existing blog content design */
  .faq-section {
    margin-top: 3rem !important;
    margin-bottom: 3rem !important;
    padding: 2rem 0 !important;

---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Sitemap - National Park Directory">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
		<h1 class="text-4xl md:text-5xl font-bold text-center my-16">Sitemap</h1>
		
		<div class="max-w-4xl mx-auto">
			<p class="text-lg text-center mb-12">Find all pages on the National Park Directory in one place.</p>
			
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
				<div>
					<h2 class="text-xl font-semibold text-green-800 mb-4">Main Pages</h2>
					<ul class="space-y-2">
						<li><a href="/" class="text-gray-700 hover:text-green-800 hover:underline">Home</a></li>
						<li><a href="/about" class="text-gray-700 hover:text-green-800 hover:underline">About Us</a></li>
						<li><a href="/contact" class="text-gray-700 hover:text-green-800 hover:underline">Contact</a></li>
						<li><a href="/blog" class="text-gray-700 hover:text-green-800 hover:underline">Blog</a></li>
						<li><a href="/faqs" class="text-gray-700 hover:text-green-800 hover:underline">FAQs</a></li>
					</ul>
				</div>
				
				<div>
					<h2 class="text-xl font-semibold text-green-800 mb-4">National Parks</h2>
					<ul class="space-y-2">
						<li><a href="#" class="text-gray-700 hover:text-green-800 hover:underline">Park Directory</a></li>
						<li><a href="#" class="text-gray-700 hover:text-green-800 hover:underline">Parks by State</a></li>
						<li><a href="#" class="text-gray-700 hover:text-green-800 hover:underline">Parks by Activity</a></li>
						<li><a href="#" class="text-gray-700 hover:text-green-800 hover:underline">Parks by Season</a></li>
